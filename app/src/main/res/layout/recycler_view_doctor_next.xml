<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/border"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/doctor_layout_next"
    android:layout_margin="9dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="75dp"
            android:id="@+id/doctor_imageNext"
            android:layout_height="75dp"
            android:src="@drawable/ic_doctor" />
    </FrameLayout>

    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center">
        <TextView
            android:id="@+id/tv_doctorNameNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Christopea"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_doctor_qualificationNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Qunification: MD "
            android:textColor="#c6c6c6"
            android:textSize="16sp"
            android:layout_marginTop="5dp" />


        <TextView
            android:id="@+id/tv_TakeAppointmentNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Take Appointment"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="15sp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="50dp"
            android:layout_marginBottom="10dp"
            />



    </LinearLayout>

</LinearLayout>