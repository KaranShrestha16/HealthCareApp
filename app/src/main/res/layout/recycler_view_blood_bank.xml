<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/bloodBank_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/border"
    >

    <ImageView
        android:id="@+id/tv_bloodBank_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/card_bg"
        android:src="@drawable/ic_health" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_bloodBank_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:fontFamily="monospace"
            android:text="Blood Bank Name"
            android:textSize="15dp"

            />

        <TextView
            android:id="@+id/tv_bloodBank_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Address"
            android:drawableLeft="@drawable/icon_location"


            />
        <TextView
            android:id="@+id/tv_bloodBank_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Contact"
            android:layout_marginBottom="30dp"
            android:drawableLeft="@drawable/icon_call"
            />





    </LinearLayout>

</LinearLayout>