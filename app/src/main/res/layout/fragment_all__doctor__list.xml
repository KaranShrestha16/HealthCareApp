<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="Fragments.All_Doctor_List">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/ic_curvebacks_01"
                android:scaleType="fitXY"/>

            <EditText
                android:id="@+id/txt_searchfragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/search_input_style"
                android:hint="Search Doctor"
                android:drawableLeft="@drawable/icon_search"
                android:imeOptions="actionSearch"
                android:maxLines="1"
                android:layout_marginTop="20dp"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginBottom="10dp"
                android:singleLine="true"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView_fragmentdoctor"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:divider="#18000000"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/txt_searchfragment"
                android:dividerHeight="1dp">

            </android.support.v7.widget.RecyclerView>


        </RelativeLayout>



</LinearLayout>
