<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/hospital_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/card_bg"
    android:layout_margin="5dp"
    >

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/txtHospital_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/card_bg"
        android:src="@drawable/bir_hospital" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtHospital_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="#ff8855"
            android:textStyle="bold"
            android:fontFamily="monospace"
            android:text="Bir Hospital International Hospital"
            android:textSize="15dp"

            />

        <TextView
            android:id="@+id/txtHospital_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="New Road, Kathmandu, Nepal"
            android:drawableLeft="@drawable/icon_location"


            />
        <TextView
            android:id="@+id/txtHospital_contatc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="01-5012332, 98198989898"
            android:drawableLeft="@drawable/icon_call"
            />

        <TextView
            android:id="@+id/readmore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:text="Read More"
            android:textColor="@color/colorPrimaryDark"


            />




    </LinearLayout>



</LinearLayout>