<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/appointment_history_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/border"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_hospital"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:src="@drawable/bir_hospital" />

        <TextView
            android:id="@+id/tv_hospital_name_appointmnet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hospital name"
            android:textAlignment="center"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_doctorName_appointment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textAlignment="center"
        android:text="Doctor Name:"
        android:textColor="#c6c6c6"
        android:textSize="16sp" />
        <TextView
            android:id="@+id/tv_department_appointmentHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Depatrment:  "
            android:textAlignment="center"
            android:textColor="#c6c6c6"
            android:textSize="16sp"
            android:layout_marginTop="5dp" />
    <TextView
        android:id="@+id/tv_appointment_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Date:  "
        android:textColor="#c6c6c6"
        android:textSize="16sp"
        android:textAlignment="center"
        android:layout_marginTop="5dp" />


        <TextView
            android:id="@+id/tv_TakeAppointment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="15sp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="50dp"
            android:layout_marginBottom="10dp"
            />


</LinearLayout>